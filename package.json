{
  "name": "proxima",
  "version": "1.0.0",
  "repository": "https://github.com/ImpulsiveLabs/Proxima.git",
  "author": "mrVladimirN <vladimir.nitu.business@outlook.com>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "version": "standard-version",
    "depcheck": "depcheck --ignore-bin-package --ignores='jest,ts-jest,@types/jest,jest-junit,@commitlint/config-conventional,@commitlint/cli,standard-version,@typescript-eslint/parser,@typescript-eslint/eslint-plugin,eslint-config-airbnb-base,eslint-plugin-import,eslint-plugin-node,eslint-plugin-promise,zod,zod-error'",
    "test": "jest",
    "prepare": "husky install",
    "postversion": "npm publish",
    "build:ts": "tsc",
    "release": "yarn lint:fix && yarn version && git push --follow-tags origin main"
  },
  "dependencies": {
    "basic-ftp": "5.0.5",
    "kafkajs": "2.2.4",
    "uuid": "11.0.4",
    "ws": "8.15.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.6.1",
    "@commitlint/config-conventional": "19.6.0",
    "@types/jest": "29.5.14",
    "@types/uuid": "10.0.0",
    "@types/ws": "8",
    "@typescript-eslint/eslint-plugin": "8.19.1",
    "depcheck": "1.4.7",
    "eslint": "8.57.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "7.2.1",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "standard-version": "9.5.0",
    "ts-jest": "29.2.5",
    "typescript": "5.7.2"
  },
  "jest": {
    "collectCoverage": true,
    "roots": [
      "<rootDir>/__tests__"
    ],
    "collectCoverageFrom": [
      "**/*.{js,ts}",
      "!coverage/**",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/commitlint.config.js"
    ],
    "transform": {
      ".+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "text",
      "text-summary"
    ],
    "reporters": [
      "default"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "testEnvironment": "node"
  },
  "engines": {
    "node": "20.x"
  },
  "packageManager": "yarn@4.6.0"
}
